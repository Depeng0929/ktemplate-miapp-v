{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "types": [
      "@dcloudio/types",
      "vite/client",
      "mini-types",
      "miniprogram-api-typings"
    ],
    "paths": {
      "~/*": ["src/*"]
    },
    "jsx": "preserve"
  },
  "exclude": ["dist", "node_modules", "src/plugins"]
}
